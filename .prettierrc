{
    "trailingComma": "all",
    "tabWidth": 4,
    "printWidth": 100,
    "semi": false,
    "singleQuote": false,
    "useTabs": true,
    "arrowParens": "avoid",
    "bracketSpacing": false,
    "endOfLine": "lf",
    "plugins": ["prettier-plugin-organize-imports", "prettier-plugin-jsdoc"],
    "jsdocVerticalAlignment": true,
    "jsdocPreferCodeFences": true,
    "jsdocCapitalizeDescription": false,
    "tsdoc": true,
    "overrides": [
        {
            "files": ["*.yml", "*.yaml"],
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
