{
    "name": "nothing-but",
    "version": "0.0.0",
    "author": "Damian Tarnawski <gthetarnav@gmail.com>",
    "license": "MIT",
    "private": true,
    "type": "module",
    "scripts": {
        "format": "prettier --ignore-path .gitignore -w **/*.{ts,tsx,json,html,css}",
        "build": "turbo run build --filter=./packages/*",
        "test": "turbo run test --filter=./packages/*",
        "typecheck": "turbo run typecheck --filter=./packages/*",
        "build-test": "turbo run build test typecheck --filter=./packages/*",
        "lint:packages": "eslint --ignore-path .gitignore --max-warnings 0 packages/*/src/**/*.{js,jsx,ts,tsx}",
        "lint:tests": "eslint --ignore-path .gitignore packages/*/test/**/*.{js,jsx,ts,tsx} --quiet --rule \"no-only-tests/no-only-tests: error\"",
        "lint": "concurrently pnpm:lint:*",
        "changeset": "changeset",
        "version": "changeset version && pnpm i --no-frozen-lockfile && git add .",
        "release": "pnpm build && changeset publish"
    },
    "devDependencies": {
        "@changesets/cli": "^2.26.2",
        "@nothing-but/eslint-plugin": "workspace:^",
        "@types/node": "^20.5.6",
        "@typescript-eslint/eslint-plugin": "^6.4.1",
        "@typescript-eslint/parser": "^6.4.1",
        "@unocss/reset": "^0.55.3",
        "@unocss/transformer-directives": "^0.55.3",
        "concurrently": "^8.2.1",
        "esbuild": "^0.19.2",
        "eslint": "^8.48.0",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-functional": "^6.0.0",
        "eslint-plugin-no-only-tests": "^3.1.0",
        "jsdom": "^22.1.0",
        "prettier": "^3.0.2",
        "prettier-plugin-organize-imports": "^3.2.3",
        "solid-js": "^1.7.11",
        "tsup": "^7.2.0",
        "tsup-preset-solid": "^2.0.2",
        "turbo": "^1.10.13",
        "typescript": "^5.2.2",
        "unocss": "^0.55.3",
        "vite": "4.4.9",
        "vite-plugin-solid": "^2.7.0",
        "vitest": "^0.34.3"
    },
    "packageManager": "pnpm@8.6.0",
    "engines": {
        "node": ">=18",
        "pnpm": ">=8.6.0"
    }
}
