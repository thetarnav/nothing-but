{
	"name": "nothing-but",
	"version": "0.0.0",
	"author": "Damian Tarnawski <gthetarnav@gmail.com>",
	"license": "MIT",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "turbo run build",
		"test": "turbo run test",
		"typecheck": "turbo run typecheck",
		"build-test": "turbo run build test typecheck",
		"lint:packages": "eslint --ignore-path .gitignore --max-warnings 0 */src/**/*.ts",
		"lint:tests": "eslint --ignore-path .gitignore */test/**/*.ts --quiet --rule \"no-only-tests/no-only-tests: error\"",
		"lint": "bun lint:packages & bun lint:tests",
		"changeset": "changeset",
		"version": "changeset version && bun i && git add .",
		"release": "bun run build && changeset publish"
	},
	"devDependencies": {
		"@changesets/cli": "^2.26.2",
		"@nothing-but/eslint-plugin": "workspace:^",
		"@types/bun": "^1.1.8",
		"@types/node": "^20.9.1",
		"@typescript-eslint/eslint-plugin": "^6.11.0",
		"@typescript-eslint/parser": "^6.11.0",
		"@unocss/reset": "^0.57.4",
		"@unocss/transformer-directives": "^0.57.4",
		"eslint": "^8.53.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-no-only-tests": "^3.1.0",
		"solid-js": "^1.8.5",
		"turbo": "^1.10.16",
		"typescript": "^5.2.2",
		"unocss": "^0.57.4",
		"vite": "4.5.0",
		"vite-plugin-solid": "^2.7.2"
	},
	"packageManager": "pnpm@9.9.0",
	"engines": { "bun": ">=1.1.0" }
}
