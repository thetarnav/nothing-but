{
    "name": "nothing-but",
    "version": "0.0.0",
    "author": "Damian Tarnawski <gthetarnav@gmail.com>",
    "license": "MIT",
    "private": true,
    "type": "module",
    "scripts": {
        "format": "prettier --ignore-path .gitignore -w **/*.{ts,tsx,json,html,css}",
        "build": "turbo run build --filter=./packages/*",
        "test": "turbo run test --filter=./packages/*",
        "typecheck": "turbo run typecheck --filter=./packages/*",
        "build-test": "turbo run build test typecheck --filter=./packages/*",
        "lint:packages": "eslint --ignore-path .gitignore --max-warnings 0 packages/*/src/**/*",
        "lint:tests": "eslint --ignore-path .gitignore packages/*/test/** --quiet --rule \"no-only-tests/no-only-tests: error\"",
        "lint": "concurrently pnpm:lint:*",
        "changeset": "changeset",
        "version": "changeset version && pnpm i --no-frozen-lockfile && git add .",
        "release": "pnpm build && changeset publish"
    },
    "devDependencies": {
        "concurrently": "^8.2.1",
        "@changesets/cli": "^2.26.2",
        "@types/node": "^20.4.8",
        "@typescript-eslint/eslint-plugin": "^6.3.0",
        "@typescript-eslint/parser": "^6.3.0",
        "@unocss/reset": "^0.54.2",
        "@unocss/transformer-directives": "^0.54.2",
        "esbuild": "^0.19.0",
        "eslint": "^8.46.0",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-functional": "^6.0.0",
        "eslint-plugin-no-only-tests": "^3.1.0",
        "jsdom": "^22.1.0",
        "prettier": "^3.0.1",
        "prettier-plugin-organize-imports": "^3.2.3",
        "solid-js": "^1.7.9",
        "tsup": "^7.2.0",
        "tsup-preset-solid": "^2.0.2",
        "turbo": "^1.10.12",
        "typescript": "^5.1.6",
        "unocss": "^0.54.2",
        "vite": "4.4.9",
        "vite-plugin-solid": "^2.7.0",
        "vitest": "^0.34.1"
    },
    "packageManager": "pnpm@8.6.0",
    "engines": {
        "node": ">=18",
        "pnpm": ">=8.6.0"
    }
}
